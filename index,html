<script>
  // simple scroll helper
  function scrollTo(sel){ const el=document.querySelector(sel); if(el) el.scrollIntoView({behavior:'smooth',block:'start'}); }

  // CTA handlers
  function ctaRender(){ alert('Отправить заявку на 2 рендера — далее интегрируй с CRM или email.'); }

  function handleLead(e){
    e.preventDefault();
    document.getElementById('formMsg').textContent = 'Спасибо! Мы свяжемся в течение 24 часов.';
    // TODO: replace with real fetch-post to your backend / Formspree
  }

  // ---------- Before/After slider (simple horizontal drag) ----------
  (function initBeforeAfter(){
    const sliderWrap = document.getElementById('baSlider');
    const before = document.getElementById('baBefore');
    const after = document.getElementById('baAfter');
    const handle = document.getElementById('baHandle');
    let dragging = false;
    let width = sliderWrap.clientWidth;

    function setPos(percent){
      percent = Math.max(0, Math.min(1, percent));
      before.style.width = '100%';
      after.style.opacity = percent;
      handle.style.left = (percent*100) + '%';
      after.style.clipPath = `inset(0 ${100 - percent*100}% 0 0)`;
    }

    // initialize
    setPos(1); // fully after visible (user can drag)

    handle.addEventListener('mousedown', ()=>dragging=true);
    window.addEventListener('mouseup', ()=>dragging=false);
    window.addEventListener('mousemove', (e)=>{
      if(!dragging) return;
      const rect = sliderWrap.getBoundingClientRect();
      const pct = (e.clientX - rect.left) / rect.width;
      setPos(pct);
    });

    // touch support
    handle.addEventListener('touchstart', ()=>dragging=true);
    window.addEventListener('touchend', ()=>dragging=false);
    window.addEventListener('touchmove', (e)=>{
      if(!dragging) return;
      const touch = e.touches[0];
      const rect = sliderWrap.getBoundingClientRect();
      const pct = (touch.clientX - rect.left) / rect.width;
      setPos(pct);
    });
  })();

  // ------------- Quick helper: replace placeholders with real image URLs -------------
  // You can copy-paste actual image URLs (from solarway site) into this map,
  // keys: REPLACE_IMG_937, REPLACE_IMG_470, REPLACE_IMG_100, and hero/ba images.
  const REPLACE_MAP = {
    "REPLACE_IMG_937": "", // paste direct image URL here
    "REPLACE_IMG_470": "",
    "REPLACE_IMG_100": "",
    "HERO_IMG": "",
    "BA_BEFORE": "",
    "BA_AFTER": ""
  };

  function swapImagesFromMap(){
    // cards
    document.querySelectorAll('[data-src]').forEach(img=>{
      const key = img.getAttribute('data-src');
      if(REPLACE_MAP[key]) img.src = REPLACE_MAP[key];
    });
    // hero
    if(REPLACE_MAP.HERO_IMG) document.getElementById('heroImg').src = REPLACE_MAP.HERO_IMG;
    if(REPLACE_MAP.BA_BEFORE) document.getElementById('baBefore').src = REPLACE_MAP.BA_BEFORE;
    if(REPLACE_MAP.BA_AFTER) document.getElementById('baAfter').src = REPLACE_MAP.BA_AFTER;
  }

  // auto-run if you filled REPLACE_MAP above
  swapImagesFromMap();

  // Note: to get real image URLs from the site: open solarway-a.kz -> right-click image -> "Open image in new tab" -> copy URL -> paste into REPLACE_MAP (exact instructions below).
</script>
